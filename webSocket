<script type="text/javascript">
  "use strict";
  let ws = new WebSocket("ws://10.1.0.52:8080/serverchat/textChat"); // [2]
  
  function inviaAlServer(){
    let login = "login|" +document.getElementById("nome").value+
    "|"+document.getElementById("password").value;
    ws.send( login);  // [3]
    console.log("login");
  }

</script>
